<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Estilo base para la aplicación -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Personaliza el color de fondo de la aplicación -->
        <item name="android:colorBackground">@color/background_view</item>
        <!-- Color de la barra de estado -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <!-- Estilo base para botones -->
    <style name="Widget.VerduritasSA.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">12dp</item>
    </style>

    <!-- Estilo para EditText personalizado -->
    <style name="Widget.VerduritasSA.EditText" parent="Widget.MaterialComponents.TextInputEditText.FilledBox">
        <item name="android:background">@drawable/edit_text_background</item>
        <item name="android:textColor">@color/text_interior</item>
        <item name="android:textColorHint">@color/text_interior</item>
        <item name="android:padding">12dp</item>
    </style>
</resources>